{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "out",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/stripe/trial-checkout",
        "function": "trialCheckout"
      },
      {
        "source": "/api/stripe/webhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/api/stripe/cancel-subscription",
        "function": "cancelSubscription"
      },
      {
        "source": "/api/stripe/customer-portal",
        "function": "customerPortal"
      },
      {
        "source": "/api/stripe/create-setup-intent",
        "function": "createSetupIntent"
      },
      {
        "source": "/api/stripe/complete-registration",
        "function": "completeRegistration"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
